  "item": [
    {
      "name": "Services",
      "item": [
        {
          "name": "Get All Services",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/services?take=10&skip=0",
              "host": ["{{baseUrl}}"],
              "path": ["api", "services"],
              "query": [
                {
                  "key": "take",
                  "value": "10",
                  "description": "Number of items to return (1-1000)"
                },
                {
                  "key": "skip",
                  "value": "0",
                  "description": "Number of items to skip"
                }
              ]
            }
          }
        },
        {
          "name": "Create Service",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"serviceType\": \"LESSON\",\n  \"billingId\": \"{{billingId}}\",\n  \"userId\": \"{{userId}}\",\n  \"serviceId\": \"{{lessonId}}\",\n  \"amount\": 50.0\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/services",
              "host": ["{{baseUrl}}"],
              "path": ["api", "services"]
            }
          }
        },
        {
          "name": "Update Service",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"id\": \"{{serviceId}}\",\n  \"amount\": 60.0,\n  \"serviceType\": \"CARE\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/services",
              "host": ["{{baseUrl}}"],
              "path": ["api", "services"]
            }
          }
        },
        {
          "name": "Delete Service",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/services?id={{serviceId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "services"],
              "query": [
                {
                  "key": "id",
                  "value": "{{serviceId}}"
                }
              ]
            }
          }
        }
      ]
    },
