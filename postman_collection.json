{
  "info": {
    "name": "Workshop DFS API",
    "description": "API collection for the Workshop DFS project with Services, Billing, and Lessons endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "workshop-dfs-api",
